                .row
                  .col-sm-4
                    table.table.table-striped.table-no-bordered.able-hover
                      h2.text-center Break Fast
                      thead
                        tr
                          th Items
                          th Day
                          th Check
                        tbody
                          - @user_mess.each do |mess|
                            - mess_id = mess.mess_item.id
                            - if mess.mess_item.avalible_in == "break_fast"
                              = fields_for 'break_fast[]', mess do |a|
                                tr
                                  td 
                                    = mess.mess_item.chef_category_item.menu_item.title
                                  td 
                                    = mess.mess_item.day&.humanize
                                  td 
                                    = a.check_box :is_checked, include_hidden: false, id: mess_id

