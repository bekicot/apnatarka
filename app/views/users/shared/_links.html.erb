<div class="two-buttons">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Log in", new_session_path(resource_name), class: "button pull-left" %>
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_user_password_path(resource_name), class: "pull-right" %>
  <% end -%>
</div>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "btn" %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "btn" %>
<% end -%>
<span class="seperation">OR</span>
<%- if devise_mapping.omniauthable? %>
  <%= link_to "Sign in with #{OmniAuth::Utils.camelize(:facebook)}", omniauth_authorize_path(resource_name, :facebook), class: "facebook-link" %>
  <%= link_to "Sign in with #{OmniAuth::Utils.camelize(:google_oauth2)}", omniauth_authorize_path(resource_name, :google_oauth2), class: "google-link" %>
<% end -%>
