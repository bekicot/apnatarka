<div class="container">
  <div class="row">
    <div class="text-center">
      <div class="logo login-logo">
        <%= link_to root_path do %>
          <%= image_tag 'logo.png', class: 'img-responsive' %>
        <% end %>
      </div>
    </div>
    <div class="col-sm-6 col-sm-offset-3 login-form">
    <h2>Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),  html: {"data-parsley-validate" => true}) do |f| %>

      <div class="form-group clearfix">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, autofocus: true, class: 'form-control',required: true %>
      </div>

      <div class="form-group clearfix">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, class: 'form-control',required: true %>
      </div>

      <div class="form-group clearfix">
        <%= f.label :phone %><br />
        <%= f.text_field :phone, class: 'form-control',required: true %>
      </div>

      <div class="form-group clearfix">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email", class: 'form-control',required: true %>
      </div>

       <div class="form-group clearfix">
        <%= f.label :address %><br />
        <%= f.text_field :address, class: 'form-control',required: true %>
      </div>

      <div class="form-group clearfix">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control',required: true, "data-parsley-minlength" => 6 %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group clearfix">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="form-group clearfix">
        <%= f.submit "Sign Up", class: 'btn custom-btn' %>
        <%= render "users/shared/links" %>
      </div>
    <% end %>
    </div>
  </div>
</div>


