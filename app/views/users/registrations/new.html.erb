<div class="container">
  <div class="row">
    <div class="text-center">
      <div class="logo login-logo">
        <%= link_to root_path do %>
          <%= image_tag 'logo.png', class: 'img-responsive' %>
        <% end %>
      </div>
    </div>
    <div class="col-sm-6 col-sm-offset-3 login-form">
    <h2><%= t("signin_signup.sign_up")%></h2>
    <% if resource!= nil%>
      <ul id="error_explanation">
        <% resource.errors.full_messages.each do |msg| %>
          <li class="alert alert-danger"><%= msg %></li>
        <% end %>
      </ul>
    <% end %>


    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),  html: {"data-parsley-validate" => true}) do |f| %>

      <div class="form-group clearfix">
        <%= f.label t("signin_signup.first_name") %><br />
        <%= f.text_field :first_name, autofocus: true, class: 'form-control', required: true %>
      </div>

      <div class="form-group clearfix">
        <%= f.label t("signin_signup.last_name") %><br />
        <%= f.text_field :last_name, class: 'form-control', required: true %>
      </div>

      <div class="form-group clearfix">
        <%= f.label t("signin_signup.phone") %><br />
        <%= f.text_field :phone, class: 'form-control', required: true, "data-parsley-type": "number" %>
      </div>

      <div class="form-group clearfix">
        <%= f.label t("signin_signup.email") %><br />
        <%= f.email_field :email, autocomplete: "email", class: 'form-control',required: true %>
      </div>

       <div class="form-group clearfix">
        <%= f.label t("signin_signup.address")%><br />
        <%= f.text_field :address, class: 'form-control',required: true %>
      </div>

      <div class="form-group clearfix">
        <%= f.label t("signin_signup.password") %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', id: 'signup-password', required: true, "data-parsley-minlength" => 6 %>
      </div>

      <div class="form-group clearfix">
        <%= f.label t("signin_signup.password_confirmation") %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control',required: true, "data-parsley-minlength" => 6, "data-parsley-equalto": "#signup-password" %>
      </div>

      <div class="form-group clearfix">
        <%= f.submit t('signin_signup.sign_up'), class: 'btn custom-btn' %>
        <%= link_to t("signin_signup.already_have_account"), new_session_path(resource_name) %>
      </div>
    <% end %>
    </div>
  </div>
</div>


