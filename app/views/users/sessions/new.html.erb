<div class="container">
  <div class="row">
    <div class="text-center">
      <div class="logo login-logo">
        <%= link_to root_path do %>
          <%= image_tag 'logo.png', class: 'img-responsive' %>
        <% end %>
      </div>
    </div>
    <div class="col-sm-6 col-sm-offset-3 login-form">
    <h2><%= t('signin_signup.sign_in') %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name),  html: {"data-parsley-validate" => true}) do |f| %>
      <div class="form-group clearfix">
        <%= f.label t("signin_signup.email") %><br />
        <%= f.text_field :login, class: 'form-control',required: true %>
      </div>

      <div class="form-group clearfix">
        <%= f.label t("signin_signup.password") %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control',required: true, "data-parsley-minlength" => 6 %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group clearfix">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="form-group clearfix">
        <%= f.submit  t('signin_signup.sign_in'), class: 'btn custom-btn' %>
        <%= link_to t("signin_signup.no_account_message"), new_user_registration_path %>
      </div>
    <% end %>
    </div>
  </div>
</div>
